{
    "expo": {
        "name": "presenceye",
        "slug": "presenceye",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "presenceye",
        "userInterfaceStyle": "automatic",
        "platforms": ["ios", "android"],
        "newArchEnabled": true,
        "jsEngine": "hermes",
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.presenceye.mobile",
            "buildNumber": "1.0.0",
            "infoPlist": {
                "NSCameraUsageDescription": "Allow Presenceye to access your camera for profile picture and scanning",
                "NSPhotoLibraryUsageDescription": "Allow Presenceye to access your photos for profile picture"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.presenceye.mobile",
            "versionCode": 1,
            "permissions": [
                "android.permission.CAMERA",
                "android.permission.READ_EXTERNAL_STORAGE",
                "android.permission.WRITE_EXTERNAL_STORAGE"
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ],
            [
                "expo-font",
                {
                    "fonts": [
                        "./assets/fonts/Nunito-Light.ttf",
                        "./assets/fonts/Nunito-Regular.ttf",
                        "./assets/fonts/Nunito-Medium.ttf",
                        "./assets/fonts/Nunito-Bold.ttf",
                        "./assets/fonts/Nunito-SemiBold.ttf",
                        "./assets/fonts/Nunito-ExtraBold.ttf",
                        "./assets/fonts/Nunito-Black.ttf"
                    ]
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
